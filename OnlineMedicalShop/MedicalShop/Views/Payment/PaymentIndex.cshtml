
@{
    ViewBag.Title = "Payment Index";
}


<body style="background-color:paleturquoise;color:black">
    <div>
        <h2>Online Medicine Store </h2>
    </div>
    <br />
    <h3><i>Add Card Details</i></h3>
    <br />
    <fieldset style="background-color: black; color: blanchedalmond; box-shadow: teal 2px 2px 15px; border-radius: 10px; margin-left: 25%; margin-right: 35% ">

        <div class="container" style="margin-left:10%">

            <form method="post" action="/payment/paymentindex">
                <br />
                <div class="form-group">
                    <span style="color:red">*</span>
                    <label for="cno">Card No:</label>
                    <input type="text" class="form-control" id="cno" name="cno" placeholder="Enter card number" required />
                </div>

                <div class="form-group">
                    <span style="color:red">*</span>
                    <label for="month">Expiry Month Year:</label>
                    <input type="month" class="form-control" id="month"
                           placeholder="Enter month" name="month" required>
                </div>


                <div class="form-group">
                    <span style="color:red">*</span>
                    <label for="cvv">CVV:</label>
                    <input type="number" class="form-control" id="cvv"
                           placeholder="Enter cvv" name="cvv" required>
                </div>

                <div class="form-group">
                    <label for="total">Total Payable Amount:</label>
                    <input type="number"  class="form-control" id="total"
                           value="@ViewBag.total" name="total" readonly>
                </div>



                <button type="submit" class="btn btn-primary">Confirm</button>
                <a class="btn btn-primary" href="/medicinecart/index">Back</a>

            </form>
        </div>
        <br />
    </fieldset>
</body>
