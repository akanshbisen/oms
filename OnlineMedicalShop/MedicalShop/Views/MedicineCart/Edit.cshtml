    <div>
        <h2>Online Medicine Store </h2>
    </div>
    <br />
    <h3><i>Edit Quantity of Medicine Id: @ViewBag.updateMedicine.Id</i></h3>
    <br />
    <fieldset style="background-color: black; color: blanchedalmond; box-shadow: teal 2px 2px 15px; border-radius: 10px; margin-left: 25%; margin-right: 35% ">

        <div class="container" style="margin-left:10%">

            <form method="post" action="/medicinecart/edit">
                <br />
                <div class="form-group">
                    <label for="id">Medicine Id:</label>
                    <input type="text" class="form-control" id="id"
                           value="@ViewBag.updateMedicine.Id" name="id" readonly>
                </div>

                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="text" class="form-control" id="quantity"
                           value="@ViewBag.updateMedicine.Quantity" placeholder="Enter quantity" name="quantity">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-primary" href="/medicinecart/index">Back</a>

            </form>
        </div>
        <br />
    </fieldset>
</body>
