
@{
    ViewBag.Title = "Add To Cart";
}
<body style="background-color: paleturquoise; color: black">
    <div style="float:left;">
        <h2>Online Medicine Store</h2>
    </div>
    <br />
    <br />

   
    <div style="margin-top:5%">
        <h3><i>Add To Cart</i></h3>
       
        <a class="btn btn-danger" style="color:blanchedalmond;margin-left:90%" href="/">Logout</a>
        <br /><br />

        <fieldset style="background-color:black;color:blanchedalmond;box-shadow:teal 2px 2px 15px; border-radius: 10px; ">

            <div class="container" style="margin-left:35%">
                <br />
                <form method="post" action="/medicinecart/addtocart">
                    <div class="form-group">
                        <label for="id">Product Id:</label>
                        <input type="text" class="form-control" id="id"
                               value="@ViewBag.medicine.Id" name="id" readonly>
                    </div>
                    <div class="form-group">
                        <label for="name">Product Name:</label>
                        <input type="text" class="form-control" id="name"
                               value="@ViewBag.medicine.Name" name="name" readonly>
                    </div>
                    <div class="form-group hide">
                        <input type="text" name="img" id="img"
                               value="@ViewBag.medicine.ImgUrl" />
                    </div>
                    <div class="form-group">
                        <img src="@ViewBag.medicine.ImgUrl" width="200" height="200" style="border-radius:5px" />
                    </div>

                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="text" class="form-control" id="price"
                               value="@ViewBag.medicine.Price" name="price" readonly>
                    </div>

                    <div class="form-group">
                        <label for="quantity">Quantity:</label>
                        <input type="text" class="form-control" id="quantity"
                               value="@ViewBag.medicine.Quantity" placeholder="Enter quantity" name="quantity">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success" style="padding-left: 5%; padding-right: 5%" ">Submit</button>
                    <a class="btn btn-primary" style="padding-left: 5%; padding-right: 5%" " href="/userproduct/productlist">Back</a>
                </form>
                <br /><br />
            </div>
        </fieldset>
    </div>
</body>