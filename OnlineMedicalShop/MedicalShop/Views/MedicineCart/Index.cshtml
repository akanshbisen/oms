@using MedicalShop.Models;

@{
    ViewBag.Title = "Medicine Cart";
}

<body style="background-color: paleturquoise; color: black">
    <div style="float:left;">
        <h2 class="alert-danger">Online Medicine Store</h2>
    </div>
    <br />
    <br />
    @{
         int total = 0;
        <div style="margin-top:5%">
            <h3><i>All Medicines in Cart</i></h3>
            <a class="btn btn-success" style="color:blanchedalmond; margin-left:83%" href="/userproduct/productlist">Add Medicine</a>
            <a class="btn btn-danger" style="color:blanchedalmond;" href="/">Logout</a>
            <br /><br />
            <fieldset style="background-color:black;color:blanchedalmond;box-shadow:teal 2px 2px 15px; border-radius: 10px; ">


                <table width="105%" height="10%" style="text-align:center; border-spacing:100px 10px;border-collapse:separate;">
                    <tr>
                        <th style="text-align: center; color: darkorange">Id</th>
                        <th style="text-align: center; color: darkorange">Medicine Name</th>
                        <th style="text-align: center; color: darkorange ">Quantity</th>
                        <th style="text-align: center; color: darkorange">Price</th>
                        <th style="text-align: center; color: darkorange">Image</th>

                        <th style="text-align:center"></th>
                    </tr>

                    @{

                        foreach (Medicine medicine in ViewBag.allMedicines)
                        {
                            total = total + medicine.Quantity * medicine.Price;
                            <tr>
                                <td>@medicine.Id</td>
                                <td>@medicine.Name</td>
                                <td>@medicine.Quantity</td>
                                <td>@medicine.Price</td>
                                <td>
                                    <img src="@medicine.ImgUrl" width="40" height="40" style="border-radius:4px" />
                                </td>

                                <td>
                                    <a class="btn btn-success" href="/medicinecart/edit/@medicine.Id" role="button">Edit</a>
                                    <a class="btn btn-danger" href="/medicinecart/delete/@medicine.Id" role="button">Delete</a>
                                </td>
                            </tr>

                        }

                    }

                </table>
                <br /><br />

                


            </fieldset>

            <br />
            <br />
            <div style="">
                <label for="total">Total Payable Amount : </label>
                    <input id="total" name="total" value="@total" style="color:blanchedalmond;text-align:center; background-color:black" />
               
                <a class="btn btn-primary" style="margin-left: 79%; margin-bottom: 1px;
                    padding-left: 5%; padding-right: 5%" href="/payment/paymentindex?total=@total">Proceed to Payment</a>
            </div>

        </div>
    }
</body>